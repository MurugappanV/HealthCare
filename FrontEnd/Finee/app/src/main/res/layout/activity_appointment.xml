<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg1"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="35dp"
    android:paddingBottom="10dp"
    android:orientation="vertical"
    tools:context="com.fine_fettle.Appointment">

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_gravity="center"
        android:gravity="center_horizontal">

        <TextView
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="0dp"/>
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/appoinment_list"/>

        <TextView
            android:id="@+id/cance"
            android:layout_marginStart="30dp"
            android:textColor="#FF00ADE7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textAllCaps="false"
            android:fontFamily="@font/corpos_dem_regular"
            android:text="Appointments"
            android:textSize="20sp"/>
        <TextView
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="0dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/filters"
        android:layout_below="@+id/title"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:text="Upcoming"
            android:id="@+id/upcoming"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textAllCaps="false"
            android:fontFamily="@font/corpos_dem_regular"
            android:textSize="15sp"
            android:textColor="#55000000"
            android:background="@drawable/button_tranparent"
            >
        </Button>

        <Button
            android:text="Previous"
            android:id="@+id/previous"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textAllCaps="false"
            android:fontFamily="@font/corpos_dem_regular"
            android:textSize="15sp"
            android:textColor="#55000000"
            android:background="@drawable/button_tranparent"
            />


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/tips_list"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/filters"
        android:paddingBottom="60dp"
        android:paddingTop="10dp">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Make Appointment"
            android:textAllCaps="false"
            android:fontFamily="@font/corpos_dem_regular"
            android:textSize="17sp"
            android:textColor="#FF00ADE7"
            android:background="@drawable/button_tranparent"
            android:id="@+id/make" />
    </LinearLayout>
</RelativeLayout>








