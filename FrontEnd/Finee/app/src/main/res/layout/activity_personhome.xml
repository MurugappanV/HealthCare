<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/done"
    tools:context="com.fine_fettle.Personhome"
    android:orientation="vertical">
    <TextView
    android:id="@+id/tvView"
    android:layout_width="wrap_content"
    android:layout_height="32dp"
    android:textColor="@color/black"
    android:textSize="20sp"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/tvView1"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:fontFamily="cursive"
        android:text="@string/fine_fettle"
        android:textColor="#ffffff"
        android:textSize="40sp"
        android:textStyle="bold" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40sp">
        <LinearLayout
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/b_p_info"
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:layout_marginLeft="20sp"
                android:background="@drawable/logo"
                android:layout_gravity="left" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PERSON-INFO"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <Button
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_marginLeft="30sp"
            android:id="@+id/b_p_hospital"
            android:layout_gravity="start"
            android:background="@drawable/hospital"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HOSPITALS"
            android:layout_marginLeft="30sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textAlignment="center"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <Button
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:id="@+id/b_p_lab"
            android:layout_marginLeft="30sp"
            android:layout_gravity="left"
            android:background="@drawable/test"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DOCTORS"
            android:layout_marginLeft="30sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textAlignment="center"/>
    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/b_p_appointment"
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:layout_marginLeft="20sp"
                android:background="@drawable/appointment" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:gravity="left"
                android:text="APPOINTMENT"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <Button
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:id="@+id/b_p_ambulance"
            android:layout_marginLeft="30sp"
            android:background="@drawable/ambulance"/>
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AMBULANCE"
        android:layout_marginLeft="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <Button
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:id="@+id/b_p_chat"
            android:layout_marginLeft="30sp"
            android:background="@drawable/stethescope"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHAT"
            android:layout_marginLeft="40sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10sp"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:id="@+id/b_p_health"
            android:layout_marginLeft="20sp"
            android:background="@drawable/health"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HEALTH"
            android:layout_marginLeft="30sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textAlignment="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:id="@+id/b_p_bloodbank"
            android:layout_marginLeft="30sp"
            android:background="@drawable/blood"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BLOODBANK"
            android:layout_marginLeft="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textAlignment="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:id="@+id/b_p_order"
            android:layout_marginLeft="30sp"
            android:background="@drawable/medicine"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ORDER MEDICINE"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textAlignment="center"/>
    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:id="@+id/b_p_need"
                android:layout_marginLeft="20sp"
                android:background="@drawable/contact"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HELP ME"
                android:layout_marginLeft="30sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:id="@+id/b_p_tips"
                android:layout_marginLeft="30sp"
                android:background="@drawable/suitcase"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TIPS"
                android:layout_marginLeft="40sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:id="@+id/b_p_bmi"
                android:layout_marginLeft="30sp"
                android:background="@drawable/firstaid"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHECK BMI"
                android:textColor="@color/black"
                android:layout_marginLeft="30sp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textAlignment="center"/>
        </LinearLayout>
    </LinearLayout>
        </LinearLayout>
</ScrollView>

</LinearLayout>