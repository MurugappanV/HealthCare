<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/app_bg1"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.fine_fettle.Ambulance">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal"
        android:paddingTop="35dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/cance"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:textColor="#FF00ADE7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:fontFamily="@font/corpos_dem_regular"
            android:text="Request ambulance"
            android:textSize="20sp"
            android:textAlignment="center"/>

    </LinearLayout>

    <TextView
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_width="0dp"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ambulance_loc"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/issue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:hint="Issue"
        android:fontFamily="@font/roboto_medium"
        android:textColorHint="#73696868"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:hint="Location"
        android:fontFamily="@font/roboto_medium"
        android:textColorHint="#73696868"
        android:inputType="textPersonName"/>

    <Button
        android:id="@+id/btn_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100sp"
        android:background="@drawable/button_tranparent"
        android:fontFamily="Times"
        android:text="Request Ambulance"
        android:padding="20dp"
        android:textStyle="bold"
        android:textSize="15sp" />

    <TextView
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_width="0dp"/>


</LinearLayout>